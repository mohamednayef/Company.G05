@model IEnumerable<Department>
@{
    
}

<h1>All Departments</h1>
<br>
<br>
<a asp-action="Create" asp-controller="Department" class="btn btn-primary">Create Department</a>
<br>
<br>
@if (Model.Count() > 0)
{
    <table class="table table-hover table-striped">
        <thead>
        <tr>
            <th>Code</th>
            <th>Name</th>
            <th>Date</th>
            <th>Details</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Code</td>
                <td>@item.Name</td>
                <td>@item.CreatedAt</td>
                <td>
                    <a asp-action="Details" asp-controller="Department" class="btn btn-warning">Details</a>
                </td>
                <td>
                    <a asp-action="Edit" asp-controller="Department" class="btn btn-success">Edit</a>
                </td>
                <td>
                    <a asp-action="Delete" asp-controller="Department" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-danger">
        <h4>There is no departments</h4>
    </div>
}