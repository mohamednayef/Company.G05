@model IEnumerable<Employee>
@{
    ViewData["Title"] = "All Employee";
}

<h1>All Employee</h1>
<br>
<br>

@if (TempData["Message"] is not null)
{
    <div class="m-3 alert alert-success">
        <p>@TempData["Message"]</p>
    </div>
}

<form>
    <div class="container m-5"> 
        <div class="row">
            <div class="col-6">
                <input placeholder="Search By Name..." name="SearchInput" class="form-control" id="SearchInput">
            </div>
            <div class="col-6">
                <input type="submit" value="Search" class="btn btn-success" id="SubmitInputSearch">
            </div>
        </div>
    </div>
</form>

<a asp-action="Create" asp-controller="Employee" class="btn btn-primary">Create Employee</a>
<br>
<br>
@if (Model.Count() > 0)
{
    <table class="table table-hover table-striped">
        <thead>
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Age</th>
            <th>Eamil</th>
            <th>Address</th>
            <th>Phone</th>
            <th>Salary</th>
            <th>Is Active</th>
            <th>Is Deleted</th>
            <th>Hiring Date</th>
            <th>Created At</th>
            <th>Dept Name</th>
            <th>Details</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="~/Files/Images/@item.ImageName" alt="no" class="img-fluid rounded-circle">
                </td>
                <td>@item.Name</td>
                <td>@item.Age</td>
                <td>@item.Email</td>
                <td>@item.Address</td>
                <td>@item.Phone</td>
                <td>@item.Salary</td>
                <td>@item.IsActive</td>
                <td>@item.IsDeleted</td>
                <td>@item.HirignDate</td>
                <td>@item.CreatedAt</td>
                <td>@(item.Department?.Name ?? "Not Exist")</td>
                <partial name="PartialViews/_ButtonPartialView" model="@item.Id"/>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-danger">
        <h4>There is no Employees</h4>
    </div>
}