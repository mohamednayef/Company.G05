@model Employee

@{
    ViewData["Title"] = "Details";
}

<h1>Details Employee Page</h1>
<br>
<br>
<div>
    <input type="hidden" asp-for="Id" readonly="readonly">
    <div class="my-3">
        <label asp-for="Name" class="col-form-label"></label>
        <input asp-for="Name" class="form-control" readonly="readonly">
    </div>
    <div class="my-3">
        <label asp-for="Age" class="col-form-label"></label>
        <input asp-for="Age" class="form-control" readonly="readonly">
    </div>
    <div class="my-3">
        <label asp-for="Email" class="col-form-label"></label>
        <input asp-for="Email" class="form-control" readonly="readonly">
    </div>
    <div class="my-3">
        <label asp-for="Address" class="col-form-label"></label>
        <input asp-for="Address" class="form-control" readonly="readonly">
    </div>
    <div class="my-3">
        <label asp-for="Phone" class="col-form-label"></label>
        <input asp-for="Phone" class="form-control" readonly="readonly">
    </div>
    <div class="my-3">
        <label asp-for="Salary" class="col-form-label"></label>
        <input asp-for="Salary" class="form-control" readonly="readonly">
    </div>
    <div class="my-3">
        <input asp-for="IsActive" class="form-check" readonly="readonly">
        <label asp-for="IsActive" class="col-form-label"></label>
    </div>
    <div class="my-3">
        <input asp-for="IsDeleted" class="form-check" readonly="readonly">
        <label asp-for="IsDeleted" class="col-form-label"></label>
    </div>
    <div class="my-3">
        <label asp-for="HirignDate" class="col-form-label"></label>
        <input asp-for="HirignDate" class="form-control" readonly="readonly">
    </div>
    <div class="my-3">
        <label asp-for="CreatedAt" class="col-form-label"></label>
        <input asp-for="CreatedAt" class="form-control" readonly="readonly">
    </div>
    <div class="my-3">
        <a asp-action="Edit" asp-controller="Employee" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-light">Back To List</a>
    </div>
</div>